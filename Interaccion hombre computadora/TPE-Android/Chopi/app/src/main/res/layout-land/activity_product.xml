<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="#ff000000"
        android:layout_gravity="center"
        android:paddingTop="0dp"
        android:textStyle="bold"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/item_image_principal"
        android:layout_width="300dp"
         android:layout_height="300dp"
        android:layout_gravity="center"
        android:contentDescription=" "
        android:layout_below="@+id/item_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_image_principal"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_price"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description1"
            android:textColor="#ff000000"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description2"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/description4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description3"
            android:textColor="#ff000000"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/description5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description4"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/description6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description5"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/description7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description6"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/description8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description7"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/description9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description8"
            android:paddingBottom="1dp"
            android:textColor="#ff000000"
            android:textSize="14dp" />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignTop="@+id/item_image_principal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="96dp"
            android:layout_marginLeft="350dp">

            <ImageView
                android:id="@+id/item_image_second"
                android:layout_width="100dp"
                android:layout_height="100dp"
                
                android:layout_gravity="left"
                android:contentDescription=" "
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" />

            <ImageView
                android:id="@+id/item_image_third"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:layout_gravity="right"
                android:layout_toRightOf="@id/item_image_second"
                android:contentDescription=" "
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" />

        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>



</android.support.v4.widget.DrawerLayout>